<%= form_for (@user), :html => {:class => "form-horizontal forms_for"} do |f| %>
    <h1 class="col-sm-12 text-center">sign up here!</h1>
    <div class="form-group">
		<%= f.label :username, "Username:", :class => "col-sm-5 control-label"%>
    	<%= f.text_field :username, :class => "col-sm-3", :placeholder => "username"%>
    </div>

    <div class="form-group">
        <%= f.label :email, "email:", :class => "col-sm-5 control-label"%>
        <%= f.text_field :email, :class => "col-sm-3", :placeholder => "email"%>
    </div>

    <div class="form-group">
        <%= f.label :password, "password:", :class => "col-sm-5 control-label"%>
        <%= f.password_field :password, :class => "col-sm-3", :placeholder => "password"%>
    </div>

    <div class="form-group">
        <%= f.label :password_confirmation, "password confirmation:", :class => "col-sm-5 control-label"%>
        <%= f.password_field :password_confirmation, :class => "col-sm-3", :placeholder => "password_confirmation"%>
    </div>
    
    

    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-7">
            <%= f.submit "sign up", :class => "btn btn-primary" %>
        </div>
    </div>
<%end%>