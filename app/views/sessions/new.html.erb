<%= form_tag '/sessions', :class => "form-horizontal forms_for" do%>
    <h1 class="col-sm-12 text-center">Login</h1>

    <div class="form-group">
        <div class="col-sm-5 control-label">
            <%= label_tag :username %>:
        </div>

        <div class="col-sm-3">
           <%= text_field_tag :username, nil, placeholder: 'Enter username here...' %> 
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-5 control-label">
            <%= label_tag :password %>:
        </div>

        <div class="col-sm-3">
            <%= password_field_tag :password, nil, placeholder: 'Enter password here...' %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-7">
            <%= submit_tag "Login", :class => "btn btn-primary" %>
        </div>
    </div>

<% end %>