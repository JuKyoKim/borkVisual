<%= form_for sessions_new_path, :html => {:class => "form-horizontal forms_for"} do |f| %>
    <h1 class="col-sm-12 text-center">Login</h1>
    <div class="form-group">
		<%= f.label :username, "Username:", :class => "col-sm-5 control-label"%>
    	<%= f.text_field :username, :class => "col-sm-3", :placeholder => "username"%>
    </div>

    <div class="form-group">
        <%= f.label :password, "password:", :class => "col-sm-5 control-label"%>
        <%= f.password_field :password, :class => "col-sm-3", :placeholder => "password"%>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-5 col-sm-7">
            <%= f.submit "sign in", :class => "btn btn-primary" %>
        </div>
    </div>
<%end%>